<div class="row">
    <div class="col-md-10 col-centered">
        <div class="shopping-bag-wrapper border-around rad5 pad20">
            <div class="bag-title title">
                <h1>Shopping Bag</h1>
            </div>
            {{#if items}}
                {{>shoppingBagItemList}}

                <div class="checkout">
                    <a href="/checkout" class="btn btn-primary">Checkout</a>
                </div>
            {{else}}
            <div class="empty-bag">
                bag is empty
            </div>
            {{/if}}
        </div>
    </div>
</div>